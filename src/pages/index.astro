<style>
  body {
    margin: 0;
    width: 100vw;
    height: 100vh;
    display: grid;
    grid-template-areas:
      "w p"
      "t t";
    grid-template-columns: 1fr 200px;
    grid-template-rows: 1fr 30px;

    @media screen only (max-width: 400px) {
      & {grid-template-areas: "w" "p" "t"
      grid-template-columns: 1fr;
      grid-template-rows: 1fr 200px 30px;}
    }

    .windows {
      grid-area: w;
      overflow: clip;
      position: relative;
      display: grid;
      grid-auto-columns: 80px;
      grid-auto-rows: 100px;
      background-color: var(--window-bg);
    }
    .pannel {
      grid-area: p;
      border-style: solid;
      border-width: 5px 5px 0 5px;
      border-color: white black black white;
      background-color: #c3c3c3
    }

    .taskbar {
      grid-area: t;
      border-style: solid;
      border-width: 5px;
      border-color: white black black white;
      background-color: #c3c3c3
    }
  }
</style>

