      icon="https://i.ebayimg.com/images/g/Z3cAAOSwtchmwzCx/s-l140.jpg"
      />
      <!-- icon={import.meta.env.BASE_URL + "favicon.svg"} -->
    <Render client:load />
  </div>
  <div class="pannel"></div>
  <div class="taskbar"></div>
</Base>
