---
import NewAppTemplate from "../components/template";

const buttons = [
  {
    name: "Kerka",
    src: "https://kerka.neocities.org/buttons/kerka%20button.gif",
    site: "https://kerka.neocities.org",
  },

  {
    name: "Sava28",
    src: "https://sava28.neocities.org/images/sava28.gif",
    site: "https://sava28.neocities.org/",
  },

  {
    name: "Jellifysh",
    src: "https://static.wikia.nocookie.net/hermitcraft/images/2/25/EthosLab-face.png",
    site: "https://jellifysh.neocities.org/",
  },

  {
    name: "The Stupid Site",
    src: "data:image/gif;base64,",
    site: "https://stupidsketchbook.neocities.org/idk",
  },

  {
    name: "Gify pet",
    src: "https://gifypet.neocities.org/images/badge.gif",
    site: "https://gifypet.neocities.org/",
  },
  {
    name: "Venuvenom",
    src: "https://venuvenom.neocities.org/images/webbutton1.gif",
    site: "https://venuvenom.neocities.org/",
  },
  {
    name: "Wikipedia",
    src: "https://upload.wikimedia.org/wikipedia/commons/a/aa/Wikipedia-button_88x31.png?20070531122019",
    site: "https://en.wikipedia.org/wiki/User:Afterlifepro",
  },
];
---

<NewAppTemplate client:load title="Other Sites!!" id="otherSites" width={104}>
  <div>
    {
      buttons.map((button) => (
        <a href={button.site} target="_blank">
          <img src={button.src} alt={button.name} />
        </a>
      ))
    }
  </div></NewAppTemplate
>

<style>
  div {
    display: flex;
    flex-direction: column;
    & img {
      width: 8.8rem;
      min-height: 3.1rem;
      border: 0.2rem solid;
      border-color: var(--border-intrude);
      margin: 0.2rem;
    }
  }
</style>
